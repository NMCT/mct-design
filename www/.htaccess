<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

RewriteCond %{HTTP_HOST} ^nmct.be$ [OR]
RewriteCond %{HTTP_HOST} ^www.mct.be$ [OR]
RewriteCond %{HTTP_HOST} ^www.nmct.be$
RewriteRule (.*)$ https://mct.be/$1 [R=301,L]

RewriteRule ^/?module/(.*)$ /programma/$1 [R,L]

ErrorDocument 404 /404/index.html

</IfModule>

